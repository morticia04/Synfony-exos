{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Slug</th>
                <th>TVA</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.titre }}</td>
                <td>{{ product.Image }}</td>
                <td>{{ product.Slug }}</td>
                <td>{{ product.TVA }}</td>
                <td>{{ product.Price }}</td>
                <td>
                    <a href="{{ path('app_admin_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_new') }}">Create new</a>
{% endblock %}
