{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ category.Titre }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ category.ModifiedAt ? category.ModifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_index') }}">back to list</a>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('admin_category/_delete_form.html.twig') }}
{% endblock %}
